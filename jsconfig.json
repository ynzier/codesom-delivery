{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", ".cache", "dist"]
}
